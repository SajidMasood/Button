<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- raised button-->
    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/raised_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/raised_button"
        style="@style/RaisedButton"/>

    <!-- flat button-->
    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flat_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/raised_btn"
        android:layout_marginTop="24dp"
        android:text="@string/flat_button"
        style="@style/FlatButton"/>

    <!-- flaoating action button-->
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/email"
        app:fabSize="normal"
        android:elevation="8dp"
        android:backgroundTint="@color/colorFAB"/>


</RelativeLayout>
